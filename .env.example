# .env.example
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# General Configuration
export APP_NAME="vuln-tower"
export LOG_LEVEL="INFO"
export RUN_MODE="cron"

# Database Configuration
export DB_TYPE="sqlite"
export DB_NAME="vuln_tower.db"
# export DB_HOST="localhost"
# export DB_PORT="5432"
# export DB_USER="vulntower"
# export DB_PASSWORD="your_password"

# NVD Configuration
# https://nvd.nist.gov/developers/start-here
export NVD_API_KEY=""  # Get from https://nvd.nist.gov/developers/request-an-api-key
export FETCH_WINDOW_MINUTES="60"
export MAX_RESULTS_PER_RUN="100"
export REQUEST_TIMEOUT="30"

# Filter Configuration
export MIN_CVSS_SCORE="7.0"
export KEYWORDS=""  # Comma-separated: "kubernetes,docker,nginx"
export PRODUCTS=""  # Comma-separated: "linux_kernel,nginx"
export VENDORS=""   # Comma-separated: "microsoft,google"
export ATTACK_VECTOR=""  # NETWORK, ADJACENT, LOCAL, or PHYSICAL

# Notification Configuration - Discord
export ENABLE_DISCORD="false"
export DISCORD_WEBHOOK_URL=""

# Notification Configuration - Slack
export ENABLE_SLACK="false"
export SLACK_WEBHOOK_URL=""

# Notification Configuration - Teams
export ENABLE_TEAMS="false"
export TEAMS_WEBHOOK_URL=""

# Notification Configuration - Telegram
export ENABLE_TELEGRAM="false"
export TELEGRAM_BOT_TOKEN=""  # Get from @BotFather on Telegram
export TELEGRAM_CHAT_ID=""    # Your chat ID, group ID, or channel username

# Notification Rate Limiting
export NOTIFICATION_RATE_LIMIT_DELAY="1.0"  # Seconds between notifications (respects Retry-After headers)

# Pipeline Configuration (optional)
export ENABLE_PIPELINE="false"
export PIPELINE_STEPS=""  # Comma-separated: "llm"
export LLM_PROVIDER="openai"
export LLM_API_KEY=""
export LLM_MODEL="gpt-4o-mini"

# Secret Provider Configuration
export SECRET_PROVIDER="env"
